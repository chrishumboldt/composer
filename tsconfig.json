{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["ES2019"],
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "paths": {
      "@data/*": ["./src/data/*"],
      "@effect/*": ["./src/effect/*"],
      "@type/*": ["./src/type/*"],
      "@utility/*": ["./src/utility/*"]
    },
    "removeComments": true,
    "target": "ES2017"
  },
  "include": ["./src"],
  "exclude": ["node_modules/**/*"]
}
